// ELEMENTS
@import '../assets/imports.styl'

/* 6386698283218228c3370f800252f7f8 */
border-size = 2px
.input
	display block
	width 100%
	max-width 100%
	border 0
	// min-height 4*gs
	background c-grey7
	padding 0 (2*gs - border-size)
	font-size 14px
	font-weight 100
	color c-grey1
	border-radius br
	border border-size solid transparent
	&:focus
		outline none
		border border-size solid c-grey6
		background c-almost-grey7
	/* 8fc53d41021ebf4740f5d03e48d85ffc */
	textarea&
		min-height 2*gs
		padding-top gs
		line-height 18px

/* 67e12e92af48d19f9837ee74a939186d */
a, .link
	text-decoration none
	position relative
	display inline-block
	color inherit
	color c-red1
	color c-blue1
	cursor default
	/* 33d4f33638f7f6b8f477008694fcb8ef */
	&.is-hoverable, &.is-hoverable-one
		cursor pointer
		&:hover
			&:after, &:before
				content ''
				width 100%
				height 0
				position absolute
				bottom -2px
				left 0
				border-bottom 1px solid
			&:before
				bottom -4px
	/* e15bc71b5d3935997c1f4c1c1ce95f17 */
	&.is-hoverable-one
		&:hover
			&:after
				bottom -3px
			&:before
				display none