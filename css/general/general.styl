// GENERAL
@import '../assets/imports.styl'

*
  bbox()


html
  font-size   16px
  line-height 200.5px
  
body, html
  min-height 100%
  margin 0
  padding 0

body
  font-family 'Open Sans'
  background-color c-bg
  color c-grey1

::selection
  background-color c-red1
  color  white
  text-shadow none

::-moz-selection
  background-color c-red1
  color white
  text-shadow none

// FONT
.bold-g, .b-g
  font-weight bold
// FONT

.op-0-g
  opacity 0
.op-5-g
  opacity .5

.float-left-g,  .f-l-g
  float left
.float-right-g, .f-r-g
  float right

.h-g
  display none
.h-g-i
  display none II
.hl-g
  hl c-grey6


clearfix()
  zoom 1
  &:after, &:before
    content ''
    display table
  &:after
    clear both
// clearfix alias
cf = clearfix

// CLEARFIX
.cf, clearfix
  clearfix()

metrics()
  maxSize = 20
  short = w h
  long  = width height
  for property, j in long
    for i in 1..maxSize
      .{property}-x{i}-g, .{short[j]}-x{i}-g
        {property} i*gs
  
  maxSize = 20
  short = m p
  long  = margin padding
  for property, j in long
    for i in 1..maxSize
      shortSide = -l -r -t -b ''
      longSide  = -left -right -top -bottom ''
      for prop, x in longSide

        .{property}{prop}-x{i}-g, .{short[j]}{shortSide[x]}-x{i}-g
          {property}{prop} i*gs
      
metrics()


